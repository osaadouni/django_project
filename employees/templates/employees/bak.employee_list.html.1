{# {% extends 'employees/base.html' %} #}


{% block content %}

<div class="card" style="width: 100%">
    <div class="card-header">
        Employees 
         <small class="float-sm-right">
        <a href="{% url 'employees:employee-add' %}" class="btn btn-primary"> New Employee <i class="fa fa-plus-square-o" aria-hidden="true"></i>
 </a>
        </small>

    </div>

    <div class="card-body">

        {% if object_list %}

        <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>ID</td>
                <td>First Name</td>
                <td>Last Name</td>
                <td>E-mail</td>
                <td>Phone</td>
                <td>Job Title</td>
                <td>Photo</td>
                    
                <td>Created at</td>
                <td>Updated at</td>
                <td>View</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            {% for employee in object_list %}
                <tr>
                    <td>{{ employee.pk }}</td>
                    <td>{{ employee.first_name }}</td>
                    <td>{{ employee.last_name }}</td>
                    <td>{{ employee.email }}</td>
                    <td>{{ employee.phone }}</td>
                    <td>{{ employee.job_title|default_if_none:'' }}</td>
                    <td>
                        {% if employee.picture %}
                            <img src="{{ employee.picture.url }}" width=100 height=100 class="img-thumbnail">
                        {% endif %}
                    </td>
                    <td>{{ employee.created_at }}</td>
                    <td>{{ employee.updated_at }}</td>
                    <td>
                        <a href="{% url 'employees:employee-view' employee.id %}" class="btn btn-info btn-sm">View <i class="fa fa-eye" aria-hidden="true"></i>
                        {# <i class="fa fa-search-plus" aria-hidden="true"></i> #}

                     </td>
                    <td><a href="{% url 'employees:employee-edit' employee.id %}" class="btn btn-secondary btn-sm">Edit <i class="fa fa-pencil" aria-hidden="true"></i> </td>
                    <td><a href="{% url 'employees:employee-delete' employee.id %}" class="btn btn-danger btn-sm">Delete <i class="fa fa-trash-o" aria-hidden="true"></i>
</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>

        {% endif %}


        {# The pagination Section  #}

       {% if is_paginated %}
          <ul class="pagination">
            {% if page_obj.has_previous %}
              <li class="page-item"><a class="page-link" href="{% url 'employees:employee-list' %}?page={{ page_obj.previous_page_number }}">&laquo;</a></li>
            {% else %}
              <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
            {% endif %}
            {% for i in paginator.page_range %}
              {% if page_obj.number == i %}
                <li class="page-item active"><span class="page-link">{{ i }} <span class="sr-only">(current)</span></span></li>
              {% else %}
                <li class="page-item"><a href="#" data-url="{% url 'employees:employee-list' %}?page={{ i }}" class="page-link">{{ i }}</a></li>
              {% endif %}
            {% endfor %}
            {% if page_obj.has_next %}
              <li class="page-item"><a href="{% url 'employees:employee-list' %}?page={{ page_obj.next_page_number }}" class="page-link">&raquo;</a></li>
            {% else %}
              <li class="page-item disabled"><span class="page-link">&raquo;</span></li>
            {% endif %}
          </ul>
        {% endif %}

    </div>
</div>

{% endblock %}
