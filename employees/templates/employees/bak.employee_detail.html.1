{% extends 'employees/base.html' %}

{% block content %}

<div class="card" style="width: 100%">
    <div class="card-header">
        Employee Details
        <small class="float-sm-right"> 
        <a href="{{ object.get_absolute_url }}" class="btn btn-info"> Edit <i class="fa fa-pencil" aria-hidden="true"></i></a>
        </small>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-9 col-sm-9">
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        First Name:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.first_name }}
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Last Name:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.last_name }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        E-mail:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.email }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Phone:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.phone }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Job Title:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.job_title }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Address:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.address }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        State/Province:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.state }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Zip/Postal Code:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.zipcode }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        City/Town:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.city }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Country:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.country.name|default_if_none:"" }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Admin role:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.is_admin|yesno:'Yes,No' }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Creation Date:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.created_at }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        Modification Date:
                    </div>
                    <div class="col-md-3 col-sm-3">
                        {{ object.updated_at }}
                    </div>
                </div>
             </div>

            <div class="col-md-3 col-sm-3">
                {% if object.picture %}
                    <div class="float-right">   
                        
                       <img src="{{ object.picture.url }}" class="img-thumbnail" width=100 height=100>
                    </div>
                {% endif %}

            </div>
          </div>


    </div>
    <div class="card-footer">

        {% include "employees/includes/btn_list.html" %}

    </div>
</div>
{% endblock %}
