from django.db import models

class Activity(models.Model):
    name = models.CharField(max_length=50)
    charge_per_hour = models.DecimalField("Charge per hour:", max_digits=5, decimal_places=2)
    sold_per_hour = models.DecimalField("Sold per hour:", max_digits=5, decimal_places=2)
    vat = models.FloatField("VAT", max_digits=2, decimal_places=2))
  
